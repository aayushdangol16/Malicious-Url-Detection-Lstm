{
    "manifest_version": 2,
    "name": "URL Extractor",
    "version": "1.0",
    "description": "Extracts the current tab's URL",
    "permissions": ["tabs", "storage","<all_urls>"],
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": "logo.png"
    },
    "background":{
        "scripts":["background.js"]
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  